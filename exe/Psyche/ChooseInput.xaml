<Window x:Class="Psyche.ChooseInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Psyche | Choose Input" Height="543" Width="721"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="camera.ico">
    <Grid Name="camerasPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="10" HorizontalContentAlignment="Center" FontSize="32">Choose Video Source</Label>
        
        <Button Grid.Row="2" Grid.ColumnSpan="10" FontSize="32" Click="OpenFile_Click">Open Video File...</Button>
    </Grid>
</Window>
